<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="10000" data-pause="hover">
  <div class="carousel-inner">
    <ol class="carousel-controls">
      <li data-target="#carouselExampleControls" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleControls" data-slide-to="1"></li>
      <li data-target="#carouselExampleControls" data-slide-to="2"></li>
      <li data-target="#carouselExampleControls" data-slide-to="3"></li>
      <li data-target="#carouselExampleControls" data-slide-to="4"></li>
    </ol>

    <div class="carousel-item active">
      <%= image_tag 'marvin-meyer-SYTO3xs06fU-unsplash.jpg', class: "d-block w-100", alt: 'First Slide' %>
    </div>

    <div class="carousel-item">
      <%= image_tag ('ppeng-CtkMvKuSRKg-unsplash.jpg'), class: "d-block w-100", alt: 'Second Slide' %>
    </div>

    <div class="carousel-item">
      <%= image_tag ('kenny-eliason-G_GWtt1tiUs-unsplash.jpg'), class: "d-block w-100", alt: 'Third Slide' %>
    </div>

    <div class="carousel-item">
      <%= image_tag ('planetcare-23coWmkTNSg-unsplash.jpg'), class: "d-block w-100", alt: 'Fourth Slide' %>
    </div>

    <button type="button" class="btn btn-danger btn-lg" id="carousel-btn" ><%= link_to "Browse our collection of items", items_index_path, style: 'color: white;' %></button>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>

  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>


</div>

