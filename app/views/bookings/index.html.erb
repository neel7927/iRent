<h1> Bookings from other users </h1>

<div class="row">
  <% @bookings.each do |booking| %>
    <div class="column">
      <div class="card">
      <%if booking.item.photo.attached? %>
      <%= cl_image_tag booking.item.photo.key%>
      <% end %>
      <div class="card-product-infos">
        <h2>
          <%= booking.item.name %>
        </h2>
        <p>
          Price = Rs <%= (booking.total).round(2) %>
        </p>
        <p>
          Start Date :<%= booking.start_date.strftime('%Y-%m-%d') %>
        </p>
        <p>
          End Date: <%= booking.end_date.strftime('%Y-%m-%d') %>
        </p>
        <p>
        Booked by: <%= booking.user.name %>
        </p>
        <p>
          Booking Status: <%= booking.state%>
        </p>
        <td>
        <%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-primary"%>
        </td>
      </div>
    </div>
    </div>
  <% end %>
</div>

