<h1> MyBookings</h1>

<div class="row">
  <% @bookings.each do |booking| %>
    <div class="column">
      <div class="card">
      <%if booking.item.photo.attached? %>
      <%= cl_image_tag booking.item.photo.key%>
      <% end %>
      <div class="card-product-infos">
        <h2>
          <%= booking.item.name %>
        </h2>
        <p>
          Price: Rs <%= booking.total %>
        </p>
        <p>
          Start Date :<%= booking.start_date.strftime('%Y-%m-%d') %>
        </p>
        <p>
          End Date: <%= booking.end_date.strftime('%Y-%m-%d') %>
        </p>
      </div>
    </div>
    </div>
  <% end %>
</div>
